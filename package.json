{
  "name": "mcp-meilisearch",
  "version": "1.0.25",
  "description": "Model Context Protocol (MCP) implementation for Meilisearch",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "scripts",
    "template",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./azure": {
      "import": "./dist/azure.js",
      "types": "./dist/azure.d.ts"
    }
  },
  "workspaces": [
    "demo"
  ],
  "scripts": {
    "build": "tsc && tsc --project tsconfig.types.json",
    "server": "npm run build && node --env-file=.env dist",
    "demo": "npm run build & npm run dev --workspace=demo",
    "prepublishOnly": "npm version patch && npm run build",
    "azure": "npm run build && bash ./scripts/create-function.sh && node scripts/run-function.js",
    "update-api": "npm run build && cp dist/azure.js api/ && cp dist/azure.js api/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "axios": "^1.9.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@azure/functions": "^3.5.1",
    "@types/node": "^22.14.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.12.2",
    "npm": ">=10.5.0"
  }
}

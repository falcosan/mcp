{
  "name": "mcp-meilisearch",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) implementation for Meilisearch",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "workspaces": [
    "client"
  ],
  "scripts": {
    "build": "tsc",
    "build:http": "tsc && chmod 755 dist/http.js",
    "build:stdio": "tsc && chmod 755 dist/stdio.js",
    "server": "npm run build:stdio && node --env-file=.env dist/stdio.js",
    "client": "npm run build:http && node --env-file=.env dist/http.js & npm run preview --workspace=client",
    "prepare": "npm run build:http && npm run build:stdio",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish": "npm publish"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "axios": "^1.9.0",
    "express": "^5.1.0",
    "vue": "^3.5.13",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=20.12.2",
    "npm": ">=10.5.0"
  }
}
